<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stylefeng.guns.rest.persistence.UserIotMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.stylefeng.guns.rest.model.UserIot">
        <id column="iotId" property="iotId" />
        <result column="productKey" property="productKey" />
        <result column="nickName" property="nickName" />
        <result column="owned" property="owned" />
        <result column="status" property="status" />
        <result column="userId" property="userId" />
        <result column="groupId" property="groupId" />
        <result column="sceneId" property="sceneId" />
        <result column="gmtModified" property="gmtModified" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        iotId, productKey, nickName, owned, status, userId, groupId, sceneId, gmtModified
    </sql>
    
    <select id="listBinding" parameterType="com.stylefeng.guns.rest.model.UserIot" resultType="map">
    	select
    	<include refid="Base_Column_List" />
    	from
    	app_user_iot
    	where
    	userId = #{userId}
    	<if test="productKey != null and productKey != ''">
    	and productKey = #{productKey}
    	</if>
    	<if test="owned != null and owned != ''">
    	and owned = #{owned}
    	</if>
    	<if test="status != null and status != ''">
    	and status = #{status}
    	</if>
    	<if test="groupId != null and groupId != ''">
    	and groupId = #{groupId}
    	</if>
    	<if test="sceneId != null and sceneId != ''">
    	and sceneId = #{sceneId}
    	</if>
    	order by gmtModified
    </select>

</mapper>
